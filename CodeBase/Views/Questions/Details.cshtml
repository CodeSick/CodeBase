@model CodeBase.Models.Question

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Question</legend>

    <div class="display-label">Content</div>
    <div class="display-field">@Model.Content</div>

    <div class="display-label">Date</div>
    <div class="display-field">@String.Format("{0:d/M/yyyy}", Model.Date)</div>

    <div class="display-label">Author</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.Author).ToString()</div>

    <div class="display-label">Answers</div>
    <div class="display-field">@(Model.Answers == null ? "None" : Model.Answers.Count.ToString())</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.QuestionId }) |
    @Html.ActionLink("Back to List", "Index")
</p>


