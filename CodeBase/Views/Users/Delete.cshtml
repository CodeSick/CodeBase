@model CodeBase.Models.User

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>User</legend>

    <div class="display-label">Username</div>
    <div class="display-field">@Model.Username</div>

    <div class="display-label">Gravatar</div>
    <div class="display-field">@Model.Gravatar</div>

    <div class="display-label">JoinDate</div>
    <div class="display-field">@String.Format("{0:d/M/yyyy}", Model.JoinDate)</div>

    <div class="display-label">Articles</div>
    <div class="display-field">@(Model.Articles == null ? "None" : Model.Articles.Count.ToString())</div>

    <div class="display-label">Ratings</div>
    <div class="display-field">@(Model.Ratings == null ? "None" : Model.Ratings.Count.ToString())</div>

    <div class="display-label">Comments</div>
    <div class="display-field">@(Model.Comments == null ? "None" : Model.Comments.Count.ToString())</div>

    <div class="display-label">Answers</div>
    <div class="display-field">@(Model.Answers == null ? "None" : Model.Answers.Count.ToString())</div>

    <div class="display-label">Questions</div>
    <div class="display-field">@(Model.Questions == null ? "None" : Model.Questions.Count.ToString())</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


