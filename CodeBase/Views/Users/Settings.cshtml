@model CodeBase.Models.User
@{
    ViewBag.Title = "My Settings";
}
@using (Html.BeginForm("EditSettings","Users"))
{
    @Html.HiddenFor(m => m.UserId)
    <div class="input-form-title">My Settings</div>
    <div class="input-form">
        <div class="body">
            <div class="field">
                <div class="label">
                    @Html.LabelFor(m => m.Username)
                </div>
                <div class="input">
                    @Html.TextBoxFor(m => m.Username, new { @class = "textfield" })
                </div>
                <div class="validation">
                    @Html.ValidationMessageFor(m => m.Username)
                </div>
            </div>
            <div class="field">
                <div class="label">
                    @Html.LabelFor(m => m.MembershipUser.Email)
                </div>
                <div class="input">
                    @Html.TextBoxFor(m => m.MembershipUser.Email, new {@class="textfield"})
                </div>
                <div class="validation">
                    @Html.ValidationMessageFor(m => m.MembershipUser.Email)
                </div>
            </div>
        </div>
        <div class="buttons">
            <input type="submit" class="button " value="Submit" />
        </div>
    </div>
}